<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTiendita.Clientes"
             BackgroundColor="#cde2f2">
    <ContentPage.Content>
        <StackLayout>
           
            <ScrollView>
                <ListView x:Name="MyListViewCliente">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label x:Name="lblnombre" Text="{Binding nombrecompleto}" FontSize="20" TextColor="Black"></Label>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
        </StackLayout>
        </ContentPage.Content>
</ContentPage>