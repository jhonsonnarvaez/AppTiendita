<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTiendita.Ventas"
             BackgroundColor="#cde2f2">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <ListView x:Name="MyListViewVenta">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell >
                                <StackLayout Orientation="Horizontal">
                                    <Label x:Name="lblventa" Text="{Binding fechaventa, StringFormat='{0:dd/MM/yyy}'}" FontSize="20" TextColor="Black"></Label>
                                    <Label x:Name="lblsuma" Text="{Binding precio}" FontSize="20" TextColor="Black"></Label>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>